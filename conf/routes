# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index


#Forms
GET     /addWarehouse               controllers.FormController.addWarehouse()
GET     /addProduct                 controllers.FormController.addProduct()
GET     /addTag                     controllers.FormController.addTag()
GET     /addStockItem               controllers.FormController.addStockItem()


#Warehouse
GET     /warehouse/:id              controllers.WarehouseController.show(id: Long)
POST    /warehouse                  controllers.WarehouseController.create()
GET     /deletewarehouse/:id        controllers.WarehouseController.delete(id: Long)

#Product
GET     /product                    controllers.ProductController.list()
GET     /product/:id                controllers.ProductController.show(id: Long)
POST    /product                    controllers.ProductController.create()
GET     /deleteproduct/:id          controllers.ProductController.delete(id: Long)

#Tag
GET     /tag                        controllers.TagController.list()
POST    /tag                        controllers.TagController.create()

#StockItem
POST    /stockitem                  controllers.StockItemController.create()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
